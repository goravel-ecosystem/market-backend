{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "ðŸ¤– Dependencies"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)src/.*/go\\.mod$"]
    }
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "ignoreDeps": [
    "github.com/brianvoe/gofakeit/v6"
  ]
}
